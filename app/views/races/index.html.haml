#races.mdl-grid
  - if main_banner = @banners[1]
    - debugger
    .mdl-cell.mdl-cell--12-col.mdl-cell--hide-phone.mdl-cell--6-col-tablet
      = link_to main_banner.first[1], target: '_blank' do
        %div{ style: "background-image: url(#{main_banner.first[0]}); height: 150px; background-position: center;", data: { images: main_banner.sort_by(&:last).to_json, 'current-image': main_banner.first[0] }}

  - if mobile_device == "mobile"
    - banner_keys = @banners.keys - [1]
    - iteration = banner_count = 1
    - key_counter = 0
    - banner_key = banner_keys[key_counter]
    - @races.each do |race|
      - if banner_count <= banner_keys.size && (iteration == 1 || iteration == 3 || iteration == 5 || iteration == 7)
        = mobile_banners(@banners , banner_key)
        - banner_count += 1
        - key_counter += 1
        - banner_key = banner_keys[key_counter]
      - else
        .mdl-cell.mdl-cell--3-col.mdl-cell--12-col-phone.mdl-cell--6-col-tablet
          .mdl-card.mdl-shadow--2dp
            .mdl-card__title.mdl-card--expand{ style: "background-image: url(#{race.picture_url})" }
              %h6
                %i.material-icons event
                = l race.date, format: :long
              %h4.text-center{ class: "#{ race.picture_url.present? ? 'text-outline' : '' }" }
                = race.name
            .mdl-card__actions.mdl-card--border
              = link_to race.ended_at.present? ? 'REZULTATI' : 'PRIJAVE', race
      - iteration += 1
  - else
    = small_banners(@banners)
    - @races.each do |race|
      .mdl-cell.mdl-cell--3-col.mdl-cell--12-col-phone.mdl-cell--6-col-tablet
        .mdl-card.mdl-shadow--2dp
          .mdl-card__title.mdl-card--expand{ style: "background-image: url(#{race.picture_url})" }
            %h6
              %i.material-icons event
              = l race.date, format: :long
            %h4.text-center{ class: "#{ race.picture_url.present? ? 'text-outline' : '' }" }
              = race.name
          .mdl-card__actions.mdl-card--border
            = link_to race.ended_at.present? ? 'REZULTATI' : 'PRIJAVE', race
= paginate @races

:css
  .pagination {
    width: auto;
  }
